<%= form_with(model: kind, local: true, class: :"dark-matter") do |form| %>
  <% if kind.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@contact.errors.count, "error")} #{t('message.error')}:" %></h2>

      <ul>
      <% kind.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit t('buttons.save'), class: 'button' %>&nbsp;&nbsp;&nbsp;
    <%= link_to t('buttons.back'), kinds_path, class: 'button' %>
  </div>
<% end %>