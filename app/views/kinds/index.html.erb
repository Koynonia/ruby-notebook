<div class="dark-matter">
  <p id="notice"><%= notice %></p>

  <h1><%= "#{t('title.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @kinds.model.human_attribute_name("description") %></th>
        <th colspan="3"></th>
      </tr style="background: <%= cycle('#606060','#686868') %>">
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr style="background: <%= cycle('#606060','#686868') %>">
          <td><%= kind.description %></td>
          <td class="action"><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
          <td class="action"><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: t('message.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <div class="page"><%= paginate @kinds %></div>
  <br>
  <div class="actions">
      <%= link_to "#{t('buttons.new')} #{@kinds.model.model_name.human(count: 1)}", new_kind_path, class: 'button' %>
      <%= link_to t('buttons.back'), bemvindo_path, class: 'button' %>
  </div>
</div>