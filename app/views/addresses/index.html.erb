<div class="dark-matter">
  <p id="notice"><%= notice %></p>

  <h1><%= "#{t('title.listing')} #{@addresses.model.model_name.human(count: @addresses.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @addresses.model.human_attribute_name("street") %></th>
        <th><%= @addresses.model.human_attribute_name("city") %></th>
        <th><%= @addresses.model.human_attribute_name("state") %></th>
        <th><%= @addresses.model.human_attribute_name("contact_id") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr style="background: <%= cycle('#606060','#686868') %>">
          <td><%= address.street %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.contact.name %></td>
          <td class="action"><%= link_to t('buttons.show'), address %></td>
          <td class="action"><%= link_to t('buttons.edit'), edit_address_path(address) %></td>
          <td class="action"><%= link_to t('buttons.destroy'), address, method: :delete, data: { confirm: t('message.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <br>
  <div class="actions">
      <%= link_to "#{t('buttons.new')} #{@addresses.model.model_name.human(count: 1)}", new_address_path, class: 'button' %>&nbsp;&nbsp;&nbsp;
      <%= link_to t('buttons.back'), bemvindo_path, class: 'button' %>
  </div>
</div>